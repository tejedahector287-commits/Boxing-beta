      window.checkCombo=function(){
        let input=document.getElementById("input").value.trim().split(" ");
        if(JSON.stringify(input)===JSON.stringify(combo)){result.innerHTML="âœ… Correct!";} 
        else{result.innerHTML="âŒ Wrong. Correct: "+combo.join(" ");}
